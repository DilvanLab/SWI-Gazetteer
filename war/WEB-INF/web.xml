<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  
  <servlet>
    <servlet-name>GazetteerService</servlet-name>
    <servlet-class>br.usp.icmc.gazetteer.server.GazetteerServiceImpl</servlet-class>
  </servlet>

<servlet-mapping>
    <servlet-name>GazetteerService</servlet-name>
    <url-pattern>/icmcgazetteer/GazetteerService</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>IcmcGazetteer.html</welcome-file>
  </welcome-file-list>
  

  
</web-app>
